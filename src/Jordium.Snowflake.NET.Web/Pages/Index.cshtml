@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to Jordium Snowflake ID Generator</h1>
    <p class="lead">A high-performance distributed ID generation service</p>
    
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-snow"></i> Snowflake ID Generator
                    </h5>
                    <p class="card-text">
                        Generate unique, time-ordered IDs for distributed systems
                    </p>
                    <a href="/Snowflake" class="btn btn-primary btn-lg">
                        <i class="bi bi-lightning-fill"></i> Go to Generator
                    </a>
                    <a href="/swagger" class="btn btn-outline-secondary btn-lg ms-2">
                        <i class="bi bi-book"></i> API Docs
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-speedometer2"></i> High Performance</h5>
                    <p class="card-text">Generate millions of unique IDs per second</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-globe"></i> Distributed</h5>
                    <p class="card-text">Support multiple data centers and worker nodes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-clock"></i> Time-Ordered</h5>
                    <p class="card-text">IDs are sortable by generation time</p>
                </div>
            </div>
        </div>
    </div>
</div>
