<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net6.0;netstandard2.0</TargetFrameworks>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    
    <!-- NuGet Package Properties -->
    <PackageId>Jordium.Snowflake.NET</PackageId>
    <Version>1.0.0</Version>
    <Authors>Jordium.com</Authors>
    <Company>Jordium Dalian, China</Company>
    <Product>Jordium.Snowflake.NET</Product>
    <Description>A high-performance Snowflake ID generator supporting multiple algorithms (drift, traditional, lock-free) for distributed systems.</Description>
    <PackageTags>snowflake;id-generator;distributed;unique-id;雪花算法</PackageTags>
    <PackageProjectUrl>https://github.com/nelson820125/Jordium.Snowflake.NET</PackageProjectUrl>
    <RepositoryUrl>https://github.com/nelson820125/Jordium.Snowflake.NET</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Copyright>MIT License © 2025 Jordium.com</Copyright>
    <PackageReleaseNotes>Initial release with support for .NET 8.0, .NET 6.0, and .NET Standard 2.0</PackageReleaseNotes>
    
    <!-- Optional: Generate documentation XML -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    
    <!-- Optional: Generate package on build -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" Condition="Exists('README.md')" />
  </ItemGroup>

</Project>
